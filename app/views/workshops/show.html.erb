<h1><%= @workshop.name %> </h2>
<% if !@workshop.officer.nil? %>
  <h3><%= "Officer: #{@workshop.officer.name}"%></h3>
<%end%>
<%= link_to "Add New Skill", new_workshop_skill_path(@workshop), class: "btn btn-primary"  %>
<%= link_to "Edit Workshop", edit_workshop_path(@workshop), class: "btn btn-primary"  %>
<table class="table table-bordered table-striped">
  <thead>
    <caption>Current Skills</caption>
    <tr>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if @workshop.skills.size == 0 %>
      <tr>
        <td colspan="6">No skills found. <%= link_to "Create New Skill", new_workshop_skill_path(@workshop), class: "btn btn-primary"%></td>
      </tr>
    <% else %>
      <%@workshop.skills.each do |skill|%>
      <tr>
        <td><%=skill.title%> </td>
        <td><%= link_to "Edit Skill", edit_workshop_skill_path(skill), class: "btn btn-warning"  %> </td>
        <td><%= link_to "Remove Skill", destroy_skill_path(skill), :method => :delete, class: "btn btn-danger"  %> </td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
